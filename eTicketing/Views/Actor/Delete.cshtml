@model Actor
@{
    ViewData["title"] = "delete";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>are you seure you wanna delete @Model.ActorName</h1>
        </p>
        <div class="row">
             <div class="col-md-8 offset-2">
                
                     <div class="form-group text-center">
                             <img id="ProfilepicturePreview" style="max-width: 150px" />
                    </div>
                    
                         <div class="form-group">
                             <label asp-for="ProfilePictureUrl" class="control-label">Picture url</label>
                             <input asp-for="ProfilePictureUrl" id="ProfilePictureUrl" readonly class="form-control"/>
                             <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                         </div>
                         
                         <div class="form-group">
                             <label asp-for="ActorName" class="control-label"></label>
                             <input asp-for="ActorName" class="form-control" readonly />
                             <span asp-validation-for="ActorName" class="text-danger"></span>
                         </div>
                         <div class="form-group">
                             <label asp-for="Bio" class="control-label"></label>
                             <input asp-for="Bio" class="form-control" readonly />
                             <span asp-validation-for="Bio" class="text-danger"></span>
                         </div>
                     
                     <div class="form-group">
                         <form asp-controller="Actor" asp-action="Delete">
                             <input type="hidden" value="@Model.Id"/>
                              <button type="submit" class="btn btn-danger float-right">Delete</button>
                         </form>
                        
                         <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                     </div>
                 
             </div>
            
        </div>

    </div>

</div>
@section Scripts{
    <script>
        $(document).ready(function() {
             var output = document.getElementById('ProfilepicturePreview');
                    output.src = $('#ProfilePictureUrl').val();
        })
      
    </script>
}