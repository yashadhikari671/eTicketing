
@inject UserManager<ApplicationUser> userManager;


@if(!User.Identity.IsAuthenticated){
    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i> Log in
    </a>
    <span style="padding:5px"></span>
    <a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Account" asp-action="Register">
        <i class="bi bi-person-plus"></i> Register
    </a>
}
else
{
    <div class="dropdown">
    <button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown" aria-expanded="false">
        <i class="badge-info bi-person-badge"></i> Hello @userManager.GetUserName(User)
    </button>
    <ul class="dropdown-menu" aira-labelledby="profile-btn">
        <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index"><i class="bi bi-list"></i>Orders</a></li>
    </ul>
</div>
<span style="padding:5px"></span>
<form asp-controller="Account" asp-action="LogOut">
    <button class="btn btn-danger my-2 my-sm-2">
        <i class="bi bi-box-arrow-in-right"></i>
        Log Out
    </button>

</form>
        
}



