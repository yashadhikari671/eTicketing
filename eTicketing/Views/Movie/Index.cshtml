@model List<Movie>
@{
    ViewData["Title"] = "list of Movies";
}
<h1>welcome to movie view</h1>

<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
           <div class="card mb-3" style="max-width:540px;">
               <div class="row g-0">
                   <div class="col-md-12">
                       <div class="card-header text-white bg-info">
                           <p class="card-text">
                               <h5 class="card-title">
                                   @item.Name
                                   <a class="text-white float-right" style="cursor: pointer;" asp-action="Edit" asp-route-id="@item.Id" >
                                       <i class="bi bi-pencil-square cursor-pointer"></i>
                                   </a>
                               </h5>
                           </p>
                       </div>
                   </div>
                   <div class="col-md-6">
                       <img src="@item.ImageUrl" width="100%" alt="Image">

                   </div>
                   <div class="col-md-6">
                       <p class="card-text"> @item.Description</p>
                       <p class="card-text"><b>Cinema:</b> @item.Cinema.Name</p>
                       <p class="card-text"><b>Category:</b> @item.MovieCategory</p>
                       <p class="card-text"><b>Start Date:</b> @item.StartDate.ToString("dd MM yyyy")</p>
                       <p class="card-text"><b>End Date:</b> @item.EndDate.ToString("dd MM yyyy")</p>
                       <p class="card-text">
                           <b>
                               Status:
                           </b>
                            @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                            {
                                <span class="badge bg-success text-white">Avalable</span>
                            }
                            else if (DateTime.Now >= item.EndDate)
                            {
                                <span class="badge bg-danger text-white">Expired</span>
                            }
                            else
                            {
                                <span class="badge  bg-danger text-white">Upcomming</span>
                            }
                        </p>

                   </div>
               </div>
              <div class="Col-md-12">
                   <div class="card-footer">
                       <a class="btn btn-outline-primary float-right" style="cursor: pointer;" asp-action="details" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i>Show detail</a>
                       <a class="btn btn-success text-white" style="cursor: pointer;" asp-controller="Orders" asp-action="AddToShippingCart" asp-route-id="@item.Id">
                           <i class="bi bi-cart-plus"></i>
                           Add to card (@item.Price.ToString("c"))
                       </a>
                   </div>

               </div>
           </div>
   
        </div>
    }

</div>

@await Html.PartialAsync("_ButtonPartialView","Movie")

